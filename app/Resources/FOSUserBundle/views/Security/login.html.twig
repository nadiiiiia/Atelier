{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="col-lg-3 col-md-3"></div>
       <div class="col-lg-6 col-md-6">
                <div class="testimonial-card z-depth-3">
                    <div class="card-up  ">
                        
                        {% if error %}
                            <div class="error-msg bg-danger">{{ error.messageKey|trans(error.messageData, 'security') }}    </div>
                        {% endif %}
                        
                        
                    </div>
                    <div class="avatar"><img src="{{asset('bundles/stillinparis//img/login-avatar.png')}}" class="img-circle img-responsive">
                    </div>
                    <div class="card-content">
                        
                         {% trans_default_domain 'FOSUserBundle' %}
                        <h4>{{ 'security.login.submit'|trans }}</h4>
                         

                        
                         <form action="{{ path("fos_user_security_check") }}" method="post" >
                          
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                <div class="input-field">
                                     <i class="material-icons prefix">account_circle</i>
                                    <input id="icon_user" type="text" id="username" name="_username"  required="required">
                                    <label for="username">{{ 'security.login.username'|trans }}</label>
                                </div>

                                <div class="input-field">
                                    <i class="material-icons prefix">lock</i>
                                    <input type="password" id="password" name="_password" required="required">
                                    <label for="password">{{ 'security.login.password'|trans }}</label>
                                </div>
                                <div class="text-center">
                                    
                                    <button type="submit" class="btn btn-primary btn-md waves-effect waves-light">{{ 'security.login.submit'|trans }}</button>
                                </div>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                         
                        </form>
  <div class="options">
      <hr>
                    <p>Vous n'avez pas de compte ? <a href="{{path ('fos_user_registration_register')}}">Inscription</a></p>
                    <p><a href="{{ path("fos_user_resetting_request")}}">Mot de passe oubli√©?</a></p>
                    </div>
                    
                         </div>
                    </div>
                </div>
     <div class="col-lg-3 col-md-3"></div>  

     
{% endblock  %}
