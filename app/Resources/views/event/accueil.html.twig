                                                        </ul>
                                                    </div>
                                                    <!--/.Card footer-->
                                                </div>
                                                <!--/.Card-->#}

                    </div>
                {% endfor %}
                <!--/. column-->


            </div>
            <!--/.row-->


            <hr>
            <!--Pagination-->
            <nav class="row flex-center wow fadeIn" data-wow-delay="0.2s">
                <div class="navigation">
                    {{ knp_pagination_render(events) }}
                </div>
            </nav>
            <!--/.Pagination-->


        </div>
        <!--/.Main layout-->
    </main>
{% endblock %}


