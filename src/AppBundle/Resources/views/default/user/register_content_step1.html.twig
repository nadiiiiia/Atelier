<div class="row text-left">
    <!--Grid column-->
    <div class="col-md-3 mb-r">


    </div>
    <!--Grid column-->

    <!--Grid column-->
    <div class="col-md-6 mb-r pb-5">



        <div class="card">
            <div class="card-body z-depth-3">

                <br>
                <div class="avatar text-center"><img src="{{asset('bundles/app/img/login-avatar.jpg')}}" class="img-circle img-responsive"  height="100" width="100">
                </div>
                <br>
                {% trans_default_domain 'FOSUserBundle' %}

                <h3 class="text-center">{{ 'layout.register'|trans({}, 'FOSUserBundle') }} (1/2)</h3>
                <br>
                <form action="{{ path("register_step1") }}" method="post" >

                    <div class="md-form">
                        <i class="fa fa-user-circle prefix grey-text"></i>
                        <label  for="username" >Prénom</label>
                        {{form_widget(form.first_name, { 'attr': {'class': 'inputbox required'} }) }}
                        <div class="  alert-danger"> {{ form_errors(form.first_name) }}</div>
                    </div>

                    <div class="md-form">
                        <i class="fa fa-user-circle prefix grey-text"></i>
                        <label  for="username" >Nom</label>
                        {{form_widget(form.last_name, { 'attr': {'class': 'inputbox required'} }) }}
                        <div class="  alert-danger"> {{ form_errors(form.last_name) }}</div>
                    </div>

                    <div class="md-form ">
                        <i class="fa fa-calendar prefix grey-text" ></i>
                        <label for="date_naissance">Date de naissance</label>
                        {{form_widget(form.date_naissance) }}
                        <div class=" alert-danger">   {{ form_errors(form.date_naissance) }}</div>
                    </div>
                    <div class="text-right">
                        <input type="submit" id="_submit" name="_submit" value="Suinant" class="btn btn-primary-inverse btn-md waves-effect waves-light" />
                    </div>
                </form>

                <div class="text-center">
                    <h4>Ou</h4>

                    <h5>Se connecter avec:</h5>
                    <span>
                        <!--Facebook-->
                        <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" type="button" class="btn-floating btn-fb waves-effect waves-light">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <!--Google +-->
                        <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}" type="button" class="btn-floating btn-gplus waves-effect waves-light">
                            <i class="fa fa-google-plus"></i>
                        </a>
                        <!--Twitter-->
                        <a href="{{ path('hwi_oauth_service_redirect', {'service': 'twitter' }) }}" type="button" class="btn-floating btn-tw waves-effect waves-light">
                            <i class="fa fa-twitter"></i>
                        </a>


                    </span>
                </div>
                <div class="options text-right">
                    <hr>
                    <p>Vous avez déjà un compte ? <a href="{{path ('fos_user_security_login')}}">Connexion</a></p>
                </div>

            </div>


        </div>

    </div>
    <!--Grid column-->

    <!--Grid column-->
    <div class="col-md-3 mb-r">


    </div>
    <!--Grid column-->
</div>

